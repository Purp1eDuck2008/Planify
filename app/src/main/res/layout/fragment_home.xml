<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Шапка с днями недели -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6A0DAD"
        android:elevation="4dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/days_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Кнопки дней недели -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_monday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Пн"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tuesday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Вт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_wednesday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Ср"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_thursday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Чт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_friday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Пт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_saturday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Сб"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sunday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вс"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Основная область с таймлайном -->

    <ScrollView
        android:id="@+id/timeline_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Колонка с часами -->
            <LinearLayout
                android:id="@+id/hour_markers"
                android:layout_width="60dp"
                android:layout_height="1440dp"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:background="#E6D6FF">

                <!-- Полная часовая разметка -->
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="12 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="1 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="2 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="3 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="4 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="5 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="6 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="7 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="8 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="9 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="10 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="11 AM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="12 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="1 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="2 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="3 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="4 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="5 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="6 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="7 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="8 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="9 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="10 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="60dp" android:text="11 PM" android:gravity="center_vertical|start" android:paddingLeft="8dp" android:textColor="#6A0DAD" android:textSize="12sp"/>
            </LinearLayout>

            <!-- Вертикальная линия-разделитель -->


                <!-- Фоновые линии часов -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1440dp"
                    android:orientation="vertical"
                    android:background="@drawable/hour_lines"/>

            <FrameLayout
                android:id="@+id/tasks_container"
                android:layout_width="match_parent"
                android:layout_height="1440dp"
                android:layout_toEndOf="@id/hour_markers"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>