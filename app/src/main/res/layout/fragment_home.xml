<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Фиолетовая шапка с днями недели -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6A0DAD"
        android:elevation="4dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/days_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Кнопки дней недели -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_monday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Пн"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tuesday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Вт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_wednesday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Ср"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_thursday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Чт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_friday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Пт"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_saturday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Сб"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sunday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вс"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:cornerRadius="16dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Основная область с таймлайном -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#F5F0FF"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Левая колонка с часами -->
            <LinearLayout
                android:id="@+id/hour_markers"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:background="#E6D6FF">

                <!-- Полная часовая разметка (00:00-23:00) -->
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="00:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="01:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="02:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="03:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="04:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="05:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="06:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="07:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="08:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="09:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="10:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="11:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="12:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="13:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="14:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="15:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="16:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="17:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="18:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="19:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="20:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="21:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="22:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
                <TextView android:layout_width="match_parent" android:layout_height="80dp" android:text="23:00" android:gravity="center" android:textColor="#6A0DAD" android:textSize="14sp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/tasks_container"
                android:layout_width="match_parent"
                android:layout_height="1920dp"
                android:layout_toEndOf="@id/hour_markers"
                android:background="@drawable/hourly_divider"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:clipToPadding="false"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>